{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, { label: 'Pseudonyme'}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'Conditions d\'utilisations'}) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
